<%- include("../layout/header") %>
<div class="relative flex min-h-screen flex-col justify-center overflow-hidden py-6 text-black sm:py-12">
  <div class="absolute inset-x-0  -z-10 transform-gpu overflow-hidden blur-3xl top-[-10rem]" aria-hidden="true">
    <div class="relative -z-10 flex aspect-[1155/678] h-screen w-[36.125rem] max-w-none -translate-x-1/2 rotate-[30deg] items-center justify-center bg-gradient-to-tr from-[#ff80b5] to-[#9089fc] opacity-50 left-1/2 sm:w-[72.1875rem]" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
  </div>
  <div class="relative bg-white px-6 pt-10 pb-8 shadow-xl ring-1 ring-gray-900/5 sm:mx-auto sm:max-w-lg sm:rounded-lg sm:px-10 sm:min-w-[35rem]">
            <div class="mx-auto max-w-md flex items-center flex-col">
                <p class="font-bold text-2xl">Welcome Back</p>
                <p class="font-semibold text-sm text-">We're so excited to see you back!</p>
            </div>
            <!-- Forum, POST Request -->
            <form action="/signin" method="post" id="loginForm">
                <div class="mt-4">
                    <label for="emailify" class="block text-sm font-medium mb-1">Email
                        <span class="text-red-500 italic" id="emailSpanSection">
                            <% if (messages.errori) { %>
                                - <%= messages.errori %>
                            <% } else { %>
                                *
                            <% } %>
                        </span>
                    </label>
                    <div class="relative mb-4 font-medium">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-2.5 pointer-events-none">
                            <svg class="flex-shrink-0 size-5 text-gray-800" xmlns="http://www.w3.org/2000/svg"
                                width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2" />
                                <circle cx="12" cy="7" r="4" />
                            </svg>
                        </div>
                        <input type="email" id="emailify"
                            class="outline-none text-sm rounded-lg border-none block w-full ps-10 p-2.5 bg-gray-100 placeholder-gray-600 focus:ring-2 ring-blue-700"
                            required name="email"
                            value="" placeholder="Enter email">
                    </div>
                </div>
                <div class="mt-2">
                    <label for="passwordify" class="block text-sm font-medium mb-1">
                        Password
                        <span class="text-red-500 italic" id="emailSpanSection">
                            <% if (messages.errori) { %>
                                - <%= messages.errori %>
                            <% } else { %>
                                *
                            <% } %>
                        </span>
                    </label>
                    <div class="relative mb-6 font-medium">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-2.5 pointer-events-none">
                            <svg class="flex-shrink-0 size-5 text-gray-700" xmlns="http://www.w3.org/2000/svg"
                                width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M2 18v3c0 .6.4 1 1 1h4v-3h3v-3h2l1.4-1.4a6.5 6.5 0 1 0-4-4Z" />
                                <circle cx="16.5" cy="7.5" r=".5" />
                            </svg>

                        </div>
                        <input type="password" id="passwordify"
                            class="outline-none text-sm rounded-lg border-none block w-full ps-10 p-2.5  bg-gray-100 placeholder-gray-600 focus:ring-2 ring-blue-700"
                            required name="password" placeholder="Enter Password"
                            value="">
                    </div>
                </div>
                <button type="submit"
                    class="text-white w-full font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 bg-blue-600 hover:bg-blue-700 outline-none">Login</button>
            </form>
            <p class="text-sm font-medium text-gray-800">Need an account? <a href="/signup" class="text-blue-600">Register</a></p>

        </div>
    </form>
  </div>
</div>

  <%- include("../layout/footer") %>