<%- include('../layout/adminHeader') %>
    <div class="flex h-screen bg-neutral-950" :class="{ 'overflow-hidden': isSideMenuOpen }">
        <%- include("../components/admin/desktopSidebar") %>
            <%- include("../components/admin/mobileSidebar") %>
                <div class="flex flex-col flex-1 w-full">
                    <%- include("../components/admin/desktopTopNavbar") %>
                        <main class="h-full overflow-y-auto justify-center items-center flex font-quicksand">
                            <div class="container px-6 mx-auto">
                                <section>
                                    <div class="py-8 px-4 mx-auto max-w-2xl lg:py-16">
                                        <h2 class="mb-4 text-xl font-bold text-white">Add a new product</h2>
                                        <form action="#">
                                            <div class="space-y-3">
                                                <div>
                                                    <label for="name"
                                                        class="block mb-2 text-sm font-medium text-white">Product
                                                        Name</label>
                                                    <input type="text" name="name" id="name"
                                                        style="background-color: rgb(39, 39, 39) !important;"
                                                        class="border-none text-sm rounded-lg block w-full p-2.5 bg-neutral-800  text-white focus:outline-none"
                                                        placeholder="Type product name" required="">
                                                </div>
                                                <div class="flex justify-between space-x-4">
                                                    <div class="w-full">
                                                        <label for="brand"
                                                            class="block mb-2 text-sm font-medium text-white">Brand</label>
                                                        <input type="text" name="brand" id="brand"
                                                            style="background-color: rgb(39, 39, 39) !important;"
                                                            class="border-none text-sm rounded-lg block w-full p-2.5 bg-neutral-800  text-white focus:outline-none"
                                                            placeholder="Product brand" required="">
                                                    </div>
                                                    <div class="w-full">
                                                        <label for="price"
                                                            class="block mb-2 text-sm font-medium text-white">Price</label>
                                                        <input type="number" name="price" id="price"
                                                            style="background-color: rgb(39, 39, 39) !important;"
                                                            class="border-none text-sm rounded-lg block w-full p-2.5 bg-neutral-800   text-white focus:outline-none"
                                                            placeholder="$2999" required="">
                                                    </div>
                                                </div>
                                                <div class="flex justify-between space-x-4">
                                                    <div class="w-full">
                                                        <label for="category"
                                                            class="block mb-2 text-sm font-medium text-white">Category</label>
                                                        <select id="category"
                                                            class="border-none text-sm rounded-lg block w-full p-2.5 bg-neutral-800  text-white focus:outline-none"
                                                            style="background-color: rgb(38, 38, 38) !important;">
                                                            <option selected="" disabled>Select category</option>
                                                            <option value="TV">TV/Monitors</option>
                                                            <option value="PC">PC</option>
                                                            <option value="GA">Gaming/Console</option>
                                                            <option value="PH">Phones</option>
                                                        </select>
                                                    </div>
                                                    <div class="w-full">
                                                        <label for="item-weight"
                                                            class="block mb-2 text-sm font-medium text-white">Item
                                                            Weight (kg)</label>
                                                        <input type="number" name="item-weight" id="item-weight"
                                                            class="border-none text-sm rounded-lg block w-full p-2.5 bg-neutral-800 text-white focus:outline-none"
                                                            style="background-color: rgb(38, 38, 38) !important;"
                                                            placeholder="12" required="">
                                                    </div>
                                                </div>
                                                <div class="sm:col-span-2">
                                                    <label for="description"
                                                        class="block mb-2 text-sm font-medium text-white">Description</label>
                                                    <textarea id="description" rows="8"
                                                        class="border-none block p-2.5 w-full text-sm rounded-lg bg-neutral-800 text-white focus:outline-none"
                                                        style="background-color: rgb(38, 38, 38) !important;"
                                                        placeholder="Your description here"></textarea>
                                                </div>
                                            </div>
                                            <button type="submit"
                                                class="inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white bg-green-700 rounded-lg hover:bg-green-800">
                                                Add product
                                            </button>
                                        </form>
                                    </div>
                                </section>
                            </div>
                        </main>
                </div>
    </div>

    <%- include('../layout/adminFooter') %>