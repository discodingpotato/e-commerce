<%- include("../layout/adminHeader") %>
    <div class="flex h-screen bg-neutral-950" :class="{ 'overflow-hidden': isSideMenuOpen }">
        <%- include("../components/admin/desktopSidebar") %>
            <%- include("../components/admin/mobileSidebar") %>
                <div class="flex flex-col flex-1 w-full">
                    <%- include("../components/admin/desktopTopNavbar") %>
                        <main class="h-full overflow-y-auto justify-center items-center flex font-quicksand">
                            <div class="container px-6 mx-auto grid">
                                <div class="mb-4 text-gray-300 flex justify-between items-center">
                                    <div>
                                        <h4 class="text-2xl font-semibold">
                                            Products
                                        </h4>
                                        <h6 class="text-sm font-medium">
                                            Add, Edit &amp; Block products
                                        </h6>
                                    </div>
                                    <a class="text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-sm px-4 py-2 mb-3  focus:outline-none" href="products/add">New Product</a>
                                    <!-- Search Bar [ON DEVELOPMENT] -->
                                    <!-- <div class="max-w-sm">
                                    <div class="relative">
                                      <div class="pointer-events-none absolute inset-y-0 start-0 z-20 flex items-center ps-3.5">
                                        <svg class="size-4 flex-shrink-0 text-white/60" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                          <circle cx="11" cy="11" r="8"></circle>
                                          <path d="m21 21-4.3-4.3"></path>
                                        </svg>
                                      </div>
                                      <input class="block w-full rounded-lg py-3 pe-4 ps-10 text-sm text-neutral-400 placeholder-neutral-500 focus:border-blue-500 disabled:pointer-events-none disabled:opacity-50 border-neutral-700 bg-neutral-900 focus:ring-neutral-600" type="text" placeholder="Type a name" value=""/>
                                    </div>
                                  </div>-->
                                </div>
                                <div class="w-full overflow-hidden rounded-lg shadow-xs bg-neutral-900">
                                    <div class="w-full overflow-x-auto">
                                        <table class="w-full whitespace-no-wrap">
                                            <thead>
                                                <tr
                                                    class="text-base font-semibold tracking-wide whitespace-nowrap text-left border-b border-gray-700 text-gray-400">
                                                    <th class="px-4 py-3">Sl.No</th>
                                                    <th class="px-4 py-3">Product</th>
                                                    <th class="px-4 py-3">Category</th>
                                                    <!-- <th class="px-4 py-3">Images [Preview]</th> -->
                                                    <th class="px-4 py-3">Quantity</th>
                                                    <th class="px-4 py-3">Price</th>
                                                    <th class="px-4 py-3">Status</th>
                                                    <th class="px-4 py-3">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody class="divide-y divide-gray-700 whitespace-nowrap">
                                                <% products.forEach((product, index) => { %>
                                                    <tr class="text-gray-400">
                                                        <td class="px-4 py-3 text-sm">
                                                            <%= index + 1 %>
                                                        </td>
                                                        <td class="px-4 py-3">
                                                            <a href="/products/<%= product._id %>" data-tooltip-target="<%= product._id %>" class="hover:text-blue-600 relative hover:underline border-transparent inline-flex items-center gap-2 group/product" target="_blank" rel="noopener noreferrer">
                                                                <%= product.name %>
                                                                <svg class="w-5 h-5 group-hover/product:block hidden absolute -right-6 text-blue-600" viewBox="0 0 24 24">
                                                                    <path fill-rule="evenodd" clip-rule="evenodd"
                                                                        d="M20 14a1 1 0 0 0-1 1v3.077c0 .459-.022.57-.082.684a.363.363 0 0 1-.157.157c-.113.06-.225.082-.684.082H5.923c-.459 0-.571-.022-.684-.082a.363.363 0 0 1-.157-.157c-.06-.113-.082-.225-.082-.684L4.999 5.5a.5.5 0 0 1 .5-.5l3.5.005a1 1 0 1 0 .002-2L5.501 3a2.5 2.5 0 0 0-2.502 2.5v12.577c0 .76.083 1.185.32 1.627.223.419.558.753.977.977.442.237.866.319 1.627.319h12.154c.76 0 1.185-.082 1.627-.319.419-.224.753-.558.977-.977.237-.442.319-.866.319-1.627V15a1 1 0 0 0-1-1zm-2-9.055v-.291l-.39.09A10 10 0 0 1 15.36 5H14a1 1 0 1 1 0-2l5.5.003a1.5 1.5 0 0 1 1.5 1.5V10a1 1 0 1 1-2 0V8.639c0-.757.086-1.511.256-2.249l.09-.39h-.295a10 10 0 0 1-1.411 1.775l-5.933 5.932a1 1 0 0 1-1.414-1.414l5.944-5.944A10 10 0 0 1 18 4.945z"
                                                                        fill="currentColor" />
                                                                </svg>
                                                            </a>
                                                            <!-- Product tooltip image -->
                                                            <div id="<%= product._id %>" role="tooltip" class="absolute z-30 invisible inline-block px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 rounded-lg shadow-sm opacity-0 tooltip bg-neutral-700">
                                                                <div class="p-3">
                                                                    <!-- <div class="flex items-center justify-between mb-2">
                                                                        <h3>
                                                                            <%= product.name %>
                                                                        </h3>
                                                                        <div>

                                                                        </div>
                                                                    </div> -->
                                                                    <img src="/assets/images/products/<%= product._id %>/<%= product.images[0] %>" class=" rounded-md w-auto h-32" alt="">
                                                                </div>
                                                                <div class="tooltip-arrow" data-popper-arrow></div>
                                                            </div>
                                                            <!-- tooltip image end -->
                                                        </td>
                                                        <td class="px-4 py-3 text-sm">
                                                            <%= product.category.name %>
                                                        </td>
                                                        <!-- <td class="px-4 py-3">
                                                            <div class="flex items-center text-sm mr-4 w-full">
                                                                <div class="relative w-8 h-8 mr-3 rounded-full flex space-x-2">
                                                                    <img class="object-cover w-full h-full rounded-full" src="/assets/images/products/<%= product._id %>/<%= product.images[0] %>" alt="" loading="lazy" />
                                                                    <div class="w-full h-full rounded-full bg-neutral-700 object-cover p-2 flex items-center justify-center mr-5">
                                                                        +<%= product.images.length - 1 %>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </td> -->
                                                        <td class="px-4 py-3 text-sm">
                                                            <%= product.quantity %>
                                                        </td>
                                                        <td class="px-4 py-3 text-sm">
                                                            <%= product.price %>
                                                        </td>
                                                        <% if (product.isBlocked) { %>
                                                            <td class="px-4 py-3 text-base">
                                                                <span class="px-2 py-1 font-semibold leading-tight rounded-full bg-gray-700/50 text-gray-100 whitespace-nowrap">Unlisted</span>
                                                            </td>
                                                        <% } else { %>
                                                            <td class="px-4 py-3 text-base">
                                                                <span class="px-2 py-1 font-semibold leading-tight rounded-full bg-green-700/50 text-green-100 whitespace-nowrap">Active</span>
                                                            </td>     
                                                        <% } %>
                                                        <td class="px-4 py-3">
                                                            <div class="flex items-center space-x-4 text-sm">
                                                                <button data-tooltip-target="tooltipEdit<%= product.name %>" onclick="editProduct('<%= product._id %>')" class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-cyan-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray"aria-label="Edit">
                                                                    <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                                                                        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                                                                    </svg>
                                                                </button>
                                                                <div id="tooltipEdit<%= product.name %>" role="tooltip" class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 bg-neutral-700 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700">
                                                                    Edit
                                                                    <div class="tooltip-arrow" data-popper-arrow></div>
                                                                </div>
                                                                <button data-tooltip-target="tooltipBlock<%= product.name %>" class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray" aria-label="Block">
                                                                    <svg fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor" class="w-5 h-5">
                                                                        <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 0 0 5.636 5.636m12.728 12.728A9 9 0 0 1 5.636 5.636m12.728 12.728L5.636 5.636" />
                                                                    </svg>
                                                                </button>
                                                                <div id="tooltipBlock<%= product.name %>" role="tooltip" class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 bg-neutral-700 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700">
                                                                    Block
                                                                    <div class="tooltip-arrow" data-popper-arrow></div>
                                                                </div>
                                                                <button data-tooltip-target="tooltipDelete<%= product.name %>" class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-red-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray" aria-label="Delete">
                                                                    <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                                                                        <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                                                    </svg>
                                                                </button>
                                                                <div id="tooltipDelete<%= product.name %>" role="tooltip" class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 bg-neutral-700 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700">
                                                                    Delete
                                                                    <div class="tooltip-arrow" data-popper-arrow></div>
                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div
                                        class="flex px-4 py-3 text-base font-semibold tracking-wide uppercase border-t border-gray-700 sm:grid-cols-9 text-gray-400 justify-between">
                                        <span class="flex items-center col-span-3">
                                            Showing 21-30 of 100
                                        </span>
                                        <span class="col-span-2"></span>
                                        <!-- Pagination -->
                                        <span class="flex col-span-4 sm:mt-auto sm:justify-end">
                                            <nav aria-label="Table navigation">
                                                <ul class="inline-flex items-center">
                                                    <li>
                                                        <button
                                                            class="px-3 py-1 rounded-md rounded-l-lg focus:outline-none focus:shadow-outline-purple"
                                                            aria-label="Previous">
                                                            <svg class="w-4 h-4 fill-current" aria-hidden="true"
                                                                viewBox="0 0 20 20">
                                                                <path
                                                                    d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
                                                                    clip-rule="evenodd" fill-rule="evenodd"></path>
                                                            </svg>
                                                        </button>
                                                    </li>
                                                    <li>
                                                        <button
                                                            class="px-3 py-1 rounded-md focus:outline-none focus:shadow-outline-purple">
                                                            1
                                                        </button>

                                                    </li>

                                                    <li>
                                                        <button
                                                            class="px-3 py-1 text-white transition-colors duration-150 bg-purple-600 border border-r-0 border-purple-600 rounded-md focus:outline-none focus:shadow-outline-purple">
                                                            2
                                                        </button>
                                                    </li>
                                                    <li>
                                                        <button
                                                            class="px-3 py-1 rounded-md rounded-r-lg focus:outline-none focus:shadow-outline-purple"
                                                            aria-label="Next">
                                                            <svg class="w-4 h-4 fill-current" aria-hidden="true"
                                                                viewBox="0 0 20 20">
                                                                <path
                                                                    d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
                                                                    clip-rule="evenodd" fill-rule="evenodd"></path>
                                                            </svg>
                                                        </button>
                                                    </li>
                                                </ul>
                                            </nav>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </main>
                </div>
    </div>
    <script>
        function editProduct(productId) {
            location.href = 'products/' + productId
        }
    </script>
    <%- include("../layout/footer") %>